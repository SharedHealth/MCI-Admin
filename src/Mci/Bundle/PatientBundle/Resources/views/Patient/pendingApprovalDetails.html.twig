{% extends 'base.html.twig' %}

{% block content %}
{{ include('::partials/confirmModal.html.twig') }}
<style type="text/css">
    .changes{
        background: #f7e1b5;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
    }
</style>

    <div>
        {% if systemError is defined and systemError is not empty %}
            <div class="alert alert-danger" style="margin-top: 10px;">
                <ul>
                    {% for sysError in systemError %}
                        <li>{{ sysError }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <h4>
            HID-{{ patient.responseBody.hid }} <br/>

            {{ patient.responseBody.given_name }} {{ patient.responseBody.sur_name }}
        </h4>
    </div>
    <div class="clear"></div>

    <table width="100%" cellspacing="10" class="table table-bordered">
        <tbody>
        {% if responseBody.results is defined %}
            {% for results in responseBody.results %}
                    <tr>
                        <th>{{ results.field_name }}</th>
                        <td>
                            {% if results.current_value is iterable %}
                                {% for fieldLevel,value in results.current_value  %}
                                    <p>{{ fieldLevel }} : {{ value }}</p>
                                {% endfor %}
                            {% else %}
                                {{ results.current_value }}
                            {% endif %}
                        </td>
                    </tr>
                <tr>
                    <td colspan="2">
                         {% for id,field_details in results.field_details %}
                            <div class="changes">
                                 <div class="col-lg-4">{{ field_details.created_at|date('Y-m-d H:i:s') }}</div>

                                 <div class="col-lg-5">
                                     {% if field_details.value is iterable %}
                                         {% for changeFieldsLevel,changeFields in field_details.value  %}
                                             {% if results.current_value[changeFieldsLevel] is defined and results.current_value[changeFieldsLevel] != changeFields %}
                                                <p style="color: green;">{{ changeFieldsLevel }} : {{ changeFields}}</p>
                                             {% else %}
                                                 <p>{{ changeFieldsLevel }} : {{ changeFields}}</p>
                                             {% endif %}

                                         {% endfor %}
                                     {% else %}
                                         {{ field_details.value }}
                                     {% endif %}
                                 </div>
                                 <div class="col-lg-3" style="text-align: right">
                                     <button  type='button' class='btn btn-success accept' data-hid='{{ app.request.get("hid") }}' data-fieldname='{{ results.field_name }}' data-payload='{{ field_details.value|json_encode }}'>Accept</button>
                                     <a  class="btn btn-danger reject" href="{{ path('mci_patient_approval_reject',{ 'hid': app.request.get('hid'),'payload':field_details.value|json_encode,'field_name':results.field_name  }) }}">Reject</a>
                                 </div>
                                 <div style="clear: both;"></div>
                            </div>
                         {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}

 {% block documentReady %}

     $('button.accept').on('click',function(){
         var hid = $(this).data('hid');
         var fieldName = $(this).data('fieldname');
         var payload = $(this).data('payload');
         if(payload !== null && typeof payload === 'object'){
              payload = JSON.stringify(payload);
         }
         $('#hid').html(hid);
         $('#fieldName').html(fieldName);
         $('#payload').html(payload);
         $('#myModal').modal('show');
     });

    $('.apporval_details_accept').on('click',function(){
        var hid = $('#hid').html();
        var fieldName = $('#fieldName').html();
        var payload = $('#payload').html();
        var acceptUrl = "{{ path('mci_patient_approval_accept',{ 'hid': 'hid_replace'}) }}";
        var PendingApprovalDetailsUrl = "{{ path('mci_patient_approval_details',{ 'hid': 'hid_replace'} ) }}"
        acceptUrl = acceptUrl.replace("hid_replace", hid);
        PendingApprovalDetailsUrl = PendingApprovalDetailsUrl.replace("hid_replace", hid);
        if(hid){
             $.ajax({
             url: acceptUrl,
             data: { payload: payload, field_name: fieldName }
             })
             .done(function( html ) {
                  $('#myModal').modal('hide');
                  window.location = PendingApprovalDetailsUrl;
             }).fail(function(jqXHR,exception) {
                 if (jqXHR.status === 0) {
                 alert('Not connect.\n Verify Network.');
                 } else if (jqXHR.status == 404) {
                 alert('Requested page not found. [404]');
                 } else if (jqXHR.status == 500) {
                 alert('Internal Server Error [500].');
                 } else if (exception === 'parsererror') {
                 alert('Requested JSON parse failed.');
                 } else if (exception === 'timeout') {
                 alert('Time out error.');
                 } else if (exception === 'abort') {
                 alert('Ajax request aborted.');
                 } else {
                 alert('Uncaught Error.\n' + jqXHR.responseText);
                 }
             })
        }
     });
 {% endblock documentReady %}