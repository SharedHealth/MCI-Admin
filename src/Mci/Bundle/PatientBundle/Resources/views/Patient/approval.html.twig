{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- BEGIN GLOBAL STYLES -->
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
    'bundles/mcipatient/css/datepicker.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <!-- END GLOBAL STYLES -->
{% endblock stylesheets %}
{% block content %}
    <div>
        <h1 style="float: left;">Patient approval list</h1>
       <div style="float: right">
           <form>
               <p></p>
               <input name="approvalPatientSearch" type="text" placeholder="Searach">
               <input type="submit" name="submit">
           </form>
       </div>

    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Hid</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for result in responseBody.results %}
            <tr>
                <td>{{ result.hid }}</td>
                <td>{{ result.given_name }} {{ result.sur_name }}</td>
                <td>view</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}