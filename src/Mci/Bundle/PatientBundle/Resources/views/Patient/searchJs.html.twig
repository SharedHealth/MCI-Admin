<script type="text/javascript">

    jQuery("#searchButton").click(function(){

      jQuery.validator.addMethod("require_from_group", function(value, element, options) {
        var numberRequired = options[0];
        var selector = options[1];
        //Look for our selector within the parent form
        var validOrNot = jQuery(selector, element.form).filter(function() {
            // Each field is kept if it has a value
            return jQuery(this).val();
            // Set to true if there are enough, else to false
        }).length >= numberRequired;

        if(!jQuery(element).data('being_validated')) {
            var fields = jQuery(selector, element.form);
            fields.data('being_validated', true);
            // .valid() means "validate using all applicable rules" (which
            // includes this one)
            fields.valid();
            fields.data('being_validated', false);
        }
        return validOrNot;
        // {0} below is the 0th item in the options field
      }, jQuery.validator.format("Please fill out at least one field."));

    jQuery.validator.addClassRules("fillone", {
        require_from_group: [1,".fillone"]
    });
    jQuery("#searchPatientForm").validate();
    jQuery("#searchPatientForm").submit();
})

$("#searchHidButton").click(function(){
    $hid = $(".hid").val();
    if($hid){
        $("#searchHidForm").submit();
    }
})

</script>
